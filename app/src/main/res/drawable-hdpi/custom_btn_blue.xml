<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/base_color_of_app" />
            <gradient  android:angle="-90"  android:startColor="@color/button_darker" android:endColor="@color/base_color_of_app"  />
            <stroke android:width="5px" android:color="#000000" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/base_color_of_app" />
            <solid  android:color="@color/base_color_of_app"/>
            <stroke android:width="5px" android:color="#000000" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/base_color_of_app" />
            <gradient  android:angle="-90"  android:startColor="@color/button_darker" android:endColor="@color/base_color_of_app" />
            <stroke android:width="5px" android:color="#000000" />
        </shape>
    </item>
</selector>